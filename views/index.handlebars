<div class="col-12">

    <h1>Burgers</h1>


    <img src="./assets/img/burger.jpg" alt="Burger" class="center">
    <br>
    <br>
</div>


<div class="row align-items-start" "burgersdevoured">
    <div class="col-6" "burgersdevoured">
        <h2>Burgers That I Want to Devour</h2>
        <br>
        <br>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <div class="burgersdevoured">
                <div class="col-12"> {{this.burger_name}}</div>
                <button type="Submit" class="change-devoured" id="ate" data-id={{this.id}} >Eat It!</button>
            </div>
            {{/unless}}
            {{/each}}
        </ul>
    </div>



    <div class="col-6">
        <h2>Burgers That I Have Devoured</h2>
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <div class="burgersdevoured">
                <div class="col-12">{{this.burger_name}}</div>
            </div>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<div class="col-12">
    <h2 id="addtoDev">Add a Burger To Devour</h2>
    <br>
    <br>
    <form id='create-form'>

        <div class="form-group addtoDev">
            <label for="ca">Name of Burger:</label>
            <input type="text" id="ca" name="name">
            <button type="Submit" id="try">Add a Burger to Devour</button>
        </div>

