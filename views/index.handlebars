
<div class="col-12">

<h1>Burgers</h1>


<img src="./assets/img/burger.jpg" alt="Burger" width="300" height="300">
</div>


<div class="row align-items-start">
 <div class="col-5">
<h2>Burgers That I Want to Devour</h2>
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <div> {{this.burger_name}} 
        {{!-- <label for="devoured">Devoured?</label><br> --}}
        <button type="Submit" id="ate"> Devoured!</button> <br>
    </div>

    {{/unless}}
    {{/each}}
</ul>
</div>



<div class="col-5">
    <h2>Burgers That I Have Devoured</h2>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    <div>{{this.burger_name}}</div>
    {{/if}}
    {{/each}}
</ul>
</div>
</div>

<h2>Add a Burger To Devour</h2>
<form id='create-form'>

