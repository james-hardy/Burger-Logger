
<div class="col-12">

<h1>Burgers</h1>


<img src="./assets/img/burger.jpg" alt="Burger" class="center">
</div>


<div class="row align-items-start">
 <div class="col-6">
<h2>Burgers That I Want to Devour</h2>
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <div class="col-4">
    <div class="burgersadded"> {{this.burger_name}} 
    </div>
        {{!-- <label for="devoured">Devoured?</label><br> --}}
        <div class="col-6">
        <input type="hidden" id="burgerid" type="text"  value={{this.id}}>
        <button type="Submit" id="ate"> Devoured!</button> <br>
        </div>
    </div>

    {{/unless}}
    {{/each}}
</ul>
</div>



<div class="col-6">
    <h2>Burgers That I Have Devoured</h2>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    <div>{{this.burger_name}}</div>
    {{/if}}
    {{/each}}
</ul>
</div>
</div>
<div class="col-12">
<h2 id="addtoDev">Add a Burger To Devour</h2>
<form id='create-form'>

    <div class="form-group addtoDev">
        <label for="ca">Name of Burger:</label>
        <input type="text" id="ca" name="name">
        <button type="Submit" id="try">Add a Burger to Devour</button>
